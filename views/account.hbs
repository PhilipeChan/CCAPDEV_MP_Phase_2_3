<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Account</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function readFunction(dots, more, readButton) {
      var dots = document.getElementById(dots);
      var seeMore = document.getElementById(more);
      var buttonMore = document.getElementById(readButton);

      if (dots.style.display === "none") {
        dots.style.display = "inline";
        buttonMore.innerHTML = "Read more!";
        seeMore.style.display = "none";
      }
      else {
        dots.style.display = "none";
        buttonMore.innerHTML = "Read less.";
        seeMore.style.display = "inline";
      }
    }

    function incFunction(vote, down) {
      if (!document.getElementById(down).disabled) {
        var val = parseInt(document.getElementById(vote).innerHTML);
        val = isNaN(val) ? 0 : val;
        val++;
        document.getElementById(vote).innerHTML = val;
        document.getElementById(down).disabled = true;
      }
      else {
        var val = parseInt(document.getElementById(vote).innerHTML);
        val = isNaN(val) ? 0 : val;
        val--;
        document.getElementById(vote).innerHTML = val;
        document.getElementById(down).disabled = false;
      }
    }

    function decFunction(vote, up) {
      if (!document.getElementById(up).disabled) {
        var val = parseInt(document.getElementById(vote).innerHTML);
        val = isNaN(val) ? 0 : val;
        val--;
        document.getElementById(vote).innerHTML = val;
        document.getElementById(up).disabled = true;
      }
      else {
        var val = parseInt(document.getElementById(vote).innerHTML);
        val = isNaN(val) ? 0 : val;
        val++;
        document.getElementById(vote).innerHTML = val;
        document.getElementById(up).disabled = false;
      }
    }

    function showComments(commentBox) {
      var box = document.getElementById(commentBox);
      if (box.classList.contains("d-none")) {
        box.classList.remove("d-none");
        box.classList.add("d-block");
      }
      else {
        box.classList.remove("d-block");
        box.classList.add("d-none");
      }
    }

    function showActivePosts() {
      var posts = document.getElementsByClassName('activePosts')[0];
      if (posts.classList.contains("d-none")) {
        posts.classList.remove("d-none");
        posts.classList.add("d-block");
      }
      else {
        posts.classList.remove("d-block");
        posts.classList.add("d-none");
      }
    }
  </script>

  <style type="text/css">
  @media (min-width: 1200px) {
    .container{
        max-width: 900px;
    }
  }

  a:link {
    text-decoration: none;
  }

  .mores {
    display: none;
  }

  </style>
</head>

<body style="background-color:#e7dfd8;">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">
        <img src="../images/logo.png" alt="Logo" style="width:70px;">
        News Feed
      </a>
      <form class="d-flex ms-auto mx-2">
        <input class="form-control me-2" type="text" placeholder="Search">
        <button class="btn btn-light" type="button">Search</button>
      </form>
      <a class="mx-2" href="/account?user_name={{username}}&image={{profPic}}&bio={{bio}}&reputation={{reputation}}">
        <i class="fa fa-user text-white" style="font-size:30px"></i>
      </a>
      <a class="mx-2" href="signup">
        <i class="fa fa-sign-out text-white" style="font-size:30px;"></i>
      </a>
    </div>
  </nav>

  <div class="container d-flex flex-column text-center p-5 px-3 my-5 bg-white">
    <div class="container d-flex flex-row bg-dark mb-3">
      <a href="/account?user_name={{username}}&image={{profPic}}&bio={{bio}}&reputation={{reputation}}" class="link-dark">
        <img src="../{{profPic}}" alt="DisplayPicture" class="me-auto rounded-circle" style="width:75px;height:75px;">
        <span class="text-white">{{username}}</span>
      </a>
      <button class="fa fa-edit d-flex text-black ms-auto" style="font-size:30px;margin-top:10px;margin-bottom:30px;"
      data-bs-toggle="modal" data-bs-target="#editAccount"></button>
      <button class="fa fa-trash d-flex text-black" style="font-size:30px;margin-top:10px;margin-bottom:30px;"
      data-bs-toggle="modal" data-bs-target="#deleteAccount"></button>

      <div class="modal fade" id="editAccount">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Edit Account</h5>
              <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="name" class="form-control bg-dark text-white">Name: </label>
                <input type="text" class="form-control" id="name" placeholder="{{username}}">
              </div>
              <div class="form-group">
                <label for="password" class="form-control bg-dark text-white">Password: </label>
                <input type="password" class="form-control" id="password">
              </div>
              <div class="form-group">
                <label for="bio" class="form-control bg-dark text-white">Bio: </label>
                <textarea class="form-control" id="bio"></textarea>
              </div>
              <div class="form-group">
                <label for="uploadDP" class="form-control bg-dark text-white">Profile Picture: </label>
                <input type="file" class="form-control" id="uploadDP">
              </div>
              <div class="form-group">
                <label for="passwordConfirm" class="form-control bg-dark text-white">Current Password: </label>
                <input type="password" class="form-control" id="passwordConfirm">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-dark">Submit</button>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="deleteAccount">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Delete Account</h5>
              <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <p> Are you sure you want to delete your account?</p>
              <div class="form-group">
                <label for="passwordDelete" class="form-control bg-dark text-white">Current Password: </label>
                <input type="password" class="form-control" id="passwordDelete">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">No</button>
              <a href="signup">
                <button type="button" class="btn btn-dark">Yes</button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="border border-light bg-dark">
      <h4 class="text-white">Reputation Score: {{reputation}}</h4>
    </div>

    <div class="border border-dark bg-light md-5">
      <h4>Bio:</h4>
      <p>{{bio}}</p>
    </div>

    <div class="border border-dark bg-light mt-3">
      <button onclick='showActivePosts()'><h4>Active Posts:</h4></button>
      <div class="container d-flex flex-column text-center p-5 px-3 pt-3 bg-white activePosts d-none">
        <div class="container d-flex flex-row bg-dark mb-3">
          <a href="/account?user_name={{username}}&image={{profPic}}&bio={{bio}}&reputation={{reputation}}" class="link-dark">
            <img src="../{{profPic}}" alt="DisplayPicture" class="me-auto rounded-circle" style="width:75px;height:75px;">
            <span class="text-white">{{username}}</span>
          </a>
          <button class="fa fa-edit d-flex text-black ms-auto" style="font-size:30px;margin-top:10px;margin-bottom:30px;"
          data-bs-toggle="modal" data-bs-target="#editPost"></button>
          <button class="fa fa-trash d-flex text-black" style="font-size:30px;margin-top:10px;margin-bottom:30px;"
          data-bs-toggle="modal" data-bs-target="#deletePost"></button>

          <div class="modal fade" id="editPost">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Edit Post</h5>
                  <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <div class="form-group">
                    <label for="postName" class="form-control bg-dark text-white">Post Name: </label>
                    <input type="text" class="form-control" id="postName" placeholder="Delicious Bacsilog in Manila!">
                  </div>
                  <div class="form-group">
                    <label for="postBody" class="form-control bg-dark text-white">Post Body: </label>
                    <textarea class="form-control" id="postBody"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="uploadFoodImage" class="form-control bg-dark text-white">Food Image: </label>
                    <input type="file" class="form-control" id="uploadFoodImage">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-dark">Submit</button>
                </div>
              </div>
            </div>
          </div>
        
          <div class="modal fade" id="deletePost">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Delete Post</h5>
                  <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <p> Are you sure you want to delete your post?</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-light" data-bs-dismiss="modal">No</button>
                  <button type="button" class="btn btn-dark">Yes</button>
                </div>
              </div>
            </div>
          </div>
        </div>    
      </div>
    </div>
  </div>
</body>