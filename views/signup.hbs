<html>
    <head>
        <title>Sign Up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/js/validator.min.js" type="text/javascript"></script>
        <script src="/js/signup.js" type="text/javascript"></script>
   </head>
    <body style="background-color:#e7dfd8;">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
            <div class="container-fluid">
              <form class="d-flex" style="transform:translate(485px);">
              </form>
              <a href="/login">
                <i class="fa fa-user text-white" style="font-size:30px;"></i>
              </a>
            </div>
          </nav>
        <br>
        <div class="container d-flex flex-column text-center p-4 my-4 bg-light">
            <form id = "signup" name="signup" action="/signup" method="post" enctype="multipart/form-data">
                <div class="border border-light bg-dark">
                    <h4 class="text-white">Sign Up</h4>
                </div>
                <br>
                <div class="border border-dark bg-light md-5">    
                    <br> 
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="user_name" id="uname" placeholder="Username" required>
                        </div>
                    </div>
                    <p id="unameError" class="error">{{user_nameError}}</p>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="password" name="password" id="pass" placeholder="Password" required>
                        </div>
                    </div>
                    <p id="passError" class="error">{{passwordError}}</p>
                    <div class="form-group row">
                        <label class="col-sm-2" >Profile Photo</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="file" name="image" id="image_signup" accept="image/*" required>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2" >Bio</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" name="bio" id="bio_signup" placeholder="Optional Bio"></textarea>
                        </div>
                    </div>
                    <br>
                </div>
                 <div class="border border-dark bg-light mt-3">
                    <button class="btn btn-dark" type="submit" id="submit_signup">
                    <h4> Sign up </h4>
                    </button>
                    {{!-- <input class="btn btn-dark" type="submit" id="submit_signup" value="Sign Up"> --}}
                </div>
            </form>
            <div class="border border-dark bg-light mt-3">
                <button class="btn btn-light border border-dark" type="button" name="previous" onclick="window.location.href='/login';"><h4>Log In</h4></button>
            </div>
            
        </div>
    </body>
</html>

